<script src="https://cdn.tailwindcss.com"></script>

<nav class="bg-blue-600 fixed w-full z-10 top-0 left-0 shadow-md border-b border-blue-700 font-sans">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">

      <!-- Brand -->
      <a href="/" class="text-white font-extrabold text-2xl tracking-wide ">
        Attendify
      </a>

      <!-- Desktop Menu -->
      <div class="hidden md:flex items-center space-x-6 ml-auto">
        <% if (user) { %>
          <span class="text-white text-lg">Hi, <%= user.username %></span>
          <a href="/logout"
            class="bg-red-500 hover:bg-red-600 px-4 py-2 rounded text-white font-semibold transition transform hover:scale-105">
            Logout
          </a>
        <% } else { %>
          <a href="/login"
            class="bg-green-500 hover:bg-green-600 px-4 py-2 rounded text-gray-100 text-lg font-semibold transition transform hover:scale-105">
            Login
          </a>
        <% } %>
      </div>

      <!-- Mobile Hamburger -->
      <div class="md:hidden">
        <button id="menu-btn" class="text-white focus:outline-none">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-blue-600 px-4 pb-4 space-y-3">
    
    <% if (user) { %>
      <p class="text-white text-lg mb-2">Hi, <%= user.username %></p>
      <a href="/logout"
        class="block bg-red-500 hover:bg-red-600 px-4 py-2 rounded text-white font-semibold transition transform hover:scale-105">
        Logout
      </a>
    <% } else { %>
      <a href="/login"
        class="block bg-green-500 hover:bg-green-600 px-4 py-2 rounded text-gray-100 text-lg font-semibold transition transform hover:scale-115 hover:underline hover:text-white">
        Login
      </a>
    <% } %>
  </div>
</nav>

<script>
  // Toggle mobile menu
  const btn = document.getElementById("menu-btn");
  const menu = document.getElementById("mobile-menu");

  if (btn && menu) {
    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });
  }
</script>