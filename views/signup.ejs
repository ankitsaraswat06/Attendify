<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Attendify | Signup</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gradient-to-r from-cyan-400 via-blue-500 to-teal-400 min-h-screen flex items-center justify-center font-sans">

  <div class="bg-white shadow-xl rounded-2xl w-full max-w-2xl p-10">
    <!-- Header -->
    <h2 class="text-3xl font-bold text-center text-blue-600 mb-6">
      Create Your Attendify Account
    </h2>

    <!-- Signup Form -->
    <form action="/signup" method="POST" enctype="multipart/form-data" class="grid grid-cols-2 gap-6">
      <% const data = formData || {}; %>

      <% if (error) { %>
        <div class="col-span-2 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl">
          <%= error %>
        </div>
      <% } %>
      
      <!-- Name -->
      <div class="col-span-1">
        <label class="block text-gray-700 font-medium">Username</label>
        <input type="text" name="username" value="<%= data.username || '' %>" required
          class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>

      <!-- Roll No -->
      <div class="col-span-1">
        <label class="block text-gray-700 font-medium">Roll Number</label>
        <input type="number" name="rollNo" value="<%= data.rollNo || '' %>" required
          class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>

      <!-- Section -->
      <div class="col-span-1">
        <label class="block text-gray-700 font-medium">Section</label>
        <input type="text" name="section" value="<%= data.section || '' %>" required
          class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>

      <!-- Course -->
      <div class="col-span-1">
        <label class="block text-gray-700 font-medium">Course</label>
        <input type="text" name="course" value="<%= data.course || '' %>" required
          class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>


      <!-- Email -->
      <div class="col-span-2">
        <label class="block text-gray-700 font-medium">Email</label>
        <input type="email" name="email" value="<%= data.email || '' %>" required
          class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>

      <!-- Role -->
      <div class="col-span-1">
        <label class="block text-gray-700 font-medium">Role</label>
        <select name="role" required
          class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500">
          <option value="">Select role</option>
          <option value="student" <%= data.role === 'student' ? 'selected' : '' %>>Student</option>
          <option value="teacher" <%= data.role === 'teacher' ? 'selected' : '' %>>Teacher</option>
          <option value="admin" <%= data.role === 'admin' ? 'selected' : '' %>>Admin</option>
        </select>
      </div>

      <!-- Password -->
      <div class="col-span-1">
        <label class="block text-gray-700 font-medium">Password</label>
        <input type="password" name="password" required
          class="w-full px-4 py-2 border rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500">
      </div>

      <!-- Photo Upload -->
      <div class="col-span-2">
        <label class="block text-gray-700 font-medium">Upload Photo</label>
        <input type="file" name="photo" accept="image/*" required
          class="w-full px-4 py-2 border rounded-xl bg-gray-50">
      </div>

      <!-- Submit -->
      <div class="col-span-2">
        <button type="submit"
          class="w-full bg-blue-600 text-white font-bold py-3 rounded-xl shadow hover:bg-blue-700 transition">
          Sign Up
        </button>
      </div>
    </form>

    <!-- Login Link -->
    <p class="text-center text-gray-600 text-sm mt-6">
      Already have an account?
      <a href="/login" class="text-blue-600 hover:underline">Login here</a>
    </p>
  </div>

</body>
</html>
